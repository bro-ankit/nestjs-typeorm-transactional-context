{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["ESNext"],
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "skipLibCheck": true,
    "types": ["node", "vitest/globals"]
  },
  "include": ["src", "test/e2e", "vitest.config.ts"],
  "exclude": ["node_modules", "dist"]
}
